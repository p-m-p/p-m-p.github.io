---
layout: layouts/base.njk
---
{%- css %}{% include "../../css/post.css" %}{% endcss %}
{%- css %}{% include "../../css/prism-ally-dark.css" %}{% endcss %}
{% include "header.njk" %}

<article class="post">
  <header class="post-header">
    <div class="container">
      <h1 class="post-title" style="view-transition-name: {{ title | slugify }}">{{ title }}</h1>

      <div class="post-meta">
        <div class="post-date"><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></div>

        <share-button>
          <button class="share-btn" slot="button" popovertarget="share-fallback">
            Share
            <span class="share-btn-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 17 20 12 15 7"/><path d="M4 18v-2a4 4 0 0 1 4-4h12"/></svg>
            </span>
          </button>

          <div popover id="share-fallback">
            <h2 class="share-fallback-title">Share this post</h2>
            <ul class="share-fallback-links">
              <li>
                <a href="https://bsky.app/intent/compose?text={{ title | urlencode }}%20https://philparsons.co.uk/{{ page.url }}">ğŸ¦‹ Share on Bluesky</a>
              </li>
              <li>
                <a href="{{ social.linkedIn.url }}?url=https://philparsons.co.uk/{{ page.url }}&title={{ title | urlencode }}">ğŸ¢ Share on LinkedIn</a>
              </li>
              <li>
                <a href="{{ social.x.url }}?url=https://philparsons.co.uk/{{ page.url }}&text={{ title | urlencode }}&via={{ social.x.username | urlencode }}">
                  ğŸ’© Share on X
                </a>
              </li>
            </ul>
          </div>
        </share-button>
      </div>
    </div>
  </header>

  <main class="post-content container">
    <p class="post-description">{{ description }}</p>
    {{ content | safe }}
  </main>

</article>

{% include "footer.njk" %}

<back-to-top data-scroll-behavior="smooth"></back-to-top>

{% block script %}
  {% if script %}
    <script src="/js/{{ script }}" type="module" defer></script>
  {% endif %}
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/@parsonic/all@1.1.3/min.js" defer></script>
